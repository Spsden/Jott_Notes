<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rv_card_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        android:layout_margin="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/float_cards"
        android:padding="5dp" >

        <RelativeLayout
               android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title_thumb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:ellipsize="end"
                android:letterSpacing=".05"
                android:padding="5dp"
                android:text="@string/notes"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/note_desc_thumb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="5dp"
                android:ellipsize="end"
                android:layout_below="@id/title_thumb"
                android:letterSpacing=".03"
                android:maxLines="20"
                android:padding="5dp"
                android:text="ifgbdsbvkdsbvsdbbsdjvsksbasdj\n dbhdsbcjhbdc \nuidhaisbashbcsab \nwqihdiuwqgdyuqwg \n gduhasvdshav \n giduyasgvhasv"
                android:textColor="@color/white"
                android:textSize="13sp">

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/noteDate"
                android:paddingStart="10dp"
                android:textAlignment="viewEnd"
                android:text="dd-mm-yy"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/note_desc_thumb"
                android:layout_margin="7dp"
                android:textColor="@color/white"
                android:layout_gravity="end"
                android:paddingEnd="10dp"

                android:textSize="12sp">

            </com.google.android.material.textview.MaterialTextView>


        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>




</layout>