<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutBottomSheet"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/menu_and_accents"
    android:orientation="vertical"
    app:behavior_peekHeight="40dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    tools:context=".fragments.NotesPageBottomSheet">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/josefinsanssemibold"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Options"
        android:textColor="@color/white"
        android:textSize="24sp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/bottom_sheet_boxes"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:fontFamily="@font/josefinsanssemibold"
            android:paddingLeft="10dp"
            android:text="Accent Colour"
            android:textColor="@color/white"
            android:textSize="17sp">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:foregroundGravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fNote0"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="0.5"
                android:background="@drawable/note_color_0" />

            <ImageView
                android:id="@+id/fNote1"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:layout_weight="0.5"
                android:background="@drawable/note_color_1" />

            <ImageView
                android:id="@+id/fNote2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="0.5"
                android:background="@drawable/note_color_2" />

            <ImageView
                android:id="@+id/fNote3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="0.5"
                android:background="@drawable/note_color_3" />

        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"
        android:layout_weight="100"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:layout_weight="50"
            android:background="@drawable/bottom_sheet_boxes"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_image_24">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:fontFamily="@font/josefinsanssemibold"
                android:text="Add Image"
                android:textColor="@color/white"
                android:textSize="15sp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="50"
            android:background="@drawable/bottom_sheet_boxes"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_add_link_24">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/josefinsanssemibold"
                android:text="Add Link"
                android:textColor="@color/white"
                android:textSize="15sp">

            </TextView>
        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>







