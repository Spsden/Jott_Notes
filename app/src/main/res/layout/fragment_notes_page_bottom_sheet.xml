<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutBottomSheet"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet"
    android:orientation="vertical"
    app:behavior_peekHeight="40dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    tools:context=".fragments.NotesPageBottomSheet">

<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginHorizontal="7dp"-->
<!--        android:layout_marginTop="15dp"-->
<!--        android:fontFamily="@font/josefinsanssemibold"-->
<!--        android:gravity="center_horizontal"-->
<!--        android:padding="10dp"-->
<!--        android:text="Options"-->
<!--        android:textColor="@color/white"-->
<!--        android:textSize="24sp" />-->

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:background="@drawable/bottom_sheet_options_graphic" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:fontFamily="@font/josefinsanssemibold"
            android:paddingLeft="10dp"
            android:text="Accent Colour"
            android:layout_gravity="start"
            android:background="@drawable/bottom_sheet_boxes"
            android:textColor="@color/white"
            android:textSize="17sp">

        </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scrollView"
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"

            android:background="@drawable/bottom_sheet_boxes"
            android:scrollbars="none">

            <com.thebluealliance.spectrum.SpectrumPalette
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/colorPicker"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"

                app:spectrum_colors="@array/color_picker"
                app:spectrum_autoPadding="true"
                android:scrollbars="horizontal"
                app:spectrum_columnCount="16">

            </com.thebluealliance.spectrum.SpectrumPalette>
        </androidx.core.widget.NestedScrollView>




    </LinearLayout>




    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="100"

        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:layout_weight="50"
            android:background="@drawable/bottom_sheet_boxes"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_image_24">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:fontFamily="@font/josefinsanssemibold"
                android:text="Add Image"
                android:textColor="@color/white"
                android:textSize="15sp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="50"
            android:background="@drawable/bottom_sheet_boxes"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_add_link_24">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/josefinsanssemibold"
                android:text="Add Link"
                android:textColor="@color/white"
                android:textSize="15sp">

            </TextView>
        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>