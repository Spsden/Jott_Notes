<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layoutBottomSheet"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:behavior_peekHeight="40dp"
        app:layout_behavior="@string/bottom_sheet_behavior"
        android:background="@color/menu_and_accents"
        tools:context=".fragments.NotesPageBottomSheet">
    
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Options"
        android:gravity="center_horizontal"
        android:fontFamily="@font/josefinsanssemibold"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_marginHorizontal="7dp">
        
    </TextView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@drawable/bottom_sheet_boxes"
        android:layout_marginHorizontal="35dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"

            android:text="Accent Colour"
            android:fontFamily="@font/josefinsanssemibold"
            android:textSize="20sp"
            android:layout_marginHorizontal="7dp"

            android:paddingLeft="10dp">
            
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:foregroundGravity="center_vertical"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fNote1"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:background="@drawable/note_color_1"/>

            <ImageView
                android:id="@+id/fNote2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="7dp"

                android:background="@drawable/note_color_2"/>

            <ImageView
                android:id="@+id/fNote3"
                android:layout_width="25dp"
                android:layout_height="25dp"


                android:background="@drawable/note_color_3"/>

        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="100"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="50"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="7dp"
            android:background="@drawable/bottom_sheet_boxes">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_image_24">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Add Image"
                android:textColor="@color/white"
                android:layout_marginHorizontal="7dp"
                android:fontFamily="@font/josefinsanssemibold">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="50"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="7dp"
            android:background="@drawable/bottom_sheet_boxes">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/ic_baseline_add_link_24">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Add Link"
                android:textColor="@color/white"
                android:layout_marginHorizontal="7dp"
                android:fontFamily="@font/josefinsanssemibold">

            </TextView>
        </LinearLayout>



    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>
    






       