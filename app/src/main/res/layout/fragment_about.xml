<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_and_accents"
    android:paddingEnd="30dp"
    tools:context=".fragments.AboutFragment">


    <RelativeLayout
        android:id="@+id/parentcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/josefinsanssemibold"
            android:text="About"
            android:textColor="@color/white"
            android:textSize="48sp"
            tools:ignore="RtlHardcoded">

        </TextView>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/cardcontainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/about_boxes"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@id/developerdetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parentcontainer">

        <TextView
            android:id="@+id/AboutNoteTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Jott Notes"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/AboutNoteTvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AboutNoteTv"
            android:layout_marginTop="15dp"
            android:text="Jott Notes is a simple project by bunch of rookie but passionate Android developers as a part of Sophomore year project at VIT."
            android:textColor="#a6a6a6" />

        <TextView
            android:id="@+id/moreDetails"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Development"
            android:layout_below="@id/AboutNoteTvDesc"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moreDetails"
            android:layout_marginTop="15dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce malesuada, mi et ultricies pulvinar, nisl ipsum euismod metus, id auctor lectus tellus ut neque. Cras iaculis sodales dui ac consequat. Duis porta eros nec purus "
            android:textColor="#a6a6a6" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/developerdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:background="@drawable/about_boxes"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardcontainer">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Made with Love ❤️ © Spsden"
                android:textColor="#a6a6a6"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingTop="5dp"
                android:text="Version: 0.1 Beta"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/github"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/github_vector">

            </ImageView>
        </RelativeLayout>




    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>