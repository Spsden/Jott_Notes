<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="false"
    app:behavior_peekHeight="32dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:background="@drawable/bottom_sheet">

    <TextView
        android:id="@+id/choosetxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="If you are good at something never do it for free"
        android:textColor="@color/white"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="17dp"
        android:fontFamily="@font/montserratitalic"
        />
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:clickable="true"
        android:id="@+id/Notes_add"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/bottom_sheet_boxes"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:padding="11dp"
        android:focusable="true">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Notes"
            android:fontFamily="@font/montserratmedium"
            android:layout_marginLeft="30dp"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:clickable="true"
        android:id="@+id/layoutShare"
        android:orientation="horizontal"
        android:background="@drawable/bottom_sheet_boxes"
        android:layout_marginVertical="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="11dp"
        android:focusable="true">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/montserratmedium"
            android:text="Todo"
            android:layout_marginLeft="30dp"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:clickable="true"
        android:id="@+id/layoutUpload"
        android:orientation="horizontal"
        android:background="@drawable/bottom_sheet_boxes"
        android:layout_marginVertical="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="11dp"
        android:focusable="true">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Scanner"
            android:fontFamily="@font/montserratmedium"
            android:layout_marginLeft="30dp"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:clickable="true"
        android:id="@+id/layoutPrint"
        android:orientation="horizontal"
        android:background="@drawable/bottom_sheet_boxes"
        android:layout_marginVertical="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="11dp"
        android:focusable="true">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miscellanous"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:textSize="18sp"/>

    </LinearLayout>


</LinearLayout>