<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.jott_notes.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_notesCreateFragment"
            app:destination="@id/notesCreateFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_editNotesFragment"
            app:destination="@id/editNotesFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/notesCreateFragment"
        android:name="com.example.jott_notes.fragments.NotesCreateFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_notes_create" >
        <action
            android:id="@+id/action_notesCreateFragment_to_homeFragment"
            app:destination="@id/homeFragment"
             />
    </fragment>
    <fragment
        android:id="@+id/editNotesFragment"
        android:name="com.example.jott_notes.fragments.EditNotesFragment"
        android:label="Edit Notes"
        tools:layout="@layout/fragment_edit_notes" >
        <action
            android:id="@+id/action_editNotesFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@android:anim/slide_out_right"
            app:exitAnim="@android:anim/slide_in_left" />
        <argument
            android:name="dataTransfer"
            app:argType="com.example.jott_notes.mvvmstuff.entity.Notes"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <dialog
        android:id="@+id/notesPageBottomSheet2"
        android:name="com.example.jott_notes.fragments.NotesPageBottomSheet"
        android:label="fragment_notes_page_bottom_sheet"
        tools:layout="@layout/fragment_notes_page_bottom_sheet" />
</navigation>